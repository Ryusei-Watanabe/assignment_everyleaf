h1 "タスク一覧"

= link_to '新規登録', new_task_path

table
  thead
    tr
      th タイトル
      th 詳細
  tbody
    - @tasks.each do |task|
      tr
        td= link_to task.title, task
        td= task.description
        td
          = link_to '編集', edit_task_path(task)
          = link_to '削除', task, method: :delete, data: { confirm: "タスク#{task.title}を削除します。よろしいですか？" }
